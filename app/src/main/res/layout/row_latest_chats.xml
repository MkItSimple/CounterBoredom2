<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/transparentBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewLatestChats"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/transparentBackground"
        android:src="@drawable/profile_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUsernameLatestChats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/transparentBackground"
        android:fontFamily="@font/montserrat_bold"
        android:text="Choreyn Anania"
        android:textColor="@color/colorTextBlackDark"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/circleImageViewLatestChats"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMessageLatestMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Some latest chats here"
        android:textColor="@color/colorTextBlackLight"
        android:textSize="14dp"
        android:background="@color/transparentBackground"
        app:layout_constraintStart_toEndOf="@+id/circleImageViewLatestChats"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsernameLatestChats"/>

</androidx.constraintlayout.widget.ConstraintLayout>