<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_primary_gradient">
<!--    android:id="@+id/customToolbarChatLog"
android:id="@+id/toolbarCustom"-->
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/backArrow"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@color/transparentBackground"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/customToolbarChatLogCircleImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@color/transparentBackground"
            android:src="@drawable/profile_default" />

        <TextView
            android:id="@+id/customToolbarChatLogTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparentBackground"
            android:fontFamily="@font/montserrat_medium"
            android:text="Choreyn anania"
            android:textSize="16dp"
            android:textColor="@color/colorTextWhite" />
    </Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>